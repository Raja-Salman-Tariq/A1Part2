<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp">

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#CC000000"></View>

    <EditText
        android:id="@+id/dialogueName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:hint="Drink Name"
        android:maxLength="35"
        android:maxLines="1">

    </EditText>

    <EditText
        android:id="@+id/dialogueDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogueName"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        android:maxLines="3"
        android:maxLength="75"
        android:hint="Drink Text">

    </EditText>

    <TextView
        android:id="@+id/dialogueFavTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogueDesc"
        android:layout_marginHorizontal="15dp"
        android:text="Marked as Favourite :">

    </TextView>

    <CheckBox
        android:id="@+id/dialogueCb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogueDesc"
        android:layout_alignBottom="@id/dialogueFavTxt"
        android:layout_toEndOf="@id/dialogueFavTxt"
        android:layout_marginHorizontal="15dp">

    </CheckBox>

</RelativeLayout>