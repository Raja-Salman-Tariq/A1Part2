<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp">

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#CC000000"></View>

    <EditText
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Drink Name"
        android:layout_marginTop="20dp"
        android:gravity="center">

    </EditText>

    <EditText
        android:id="@+id/editDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editName"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        android:hint="Drink Text">

    </EditText>

    <TextView
        android:id="@+id/editFavTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editDesc"
        android:layout_marginHorizontal="15dp"
        android:text="Marked as Favourite :">

    </TextView>

    <CheckBox
        android:id="@+id/editCb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editDesc"
        android:layout_alignBottom="@id/editFavTxt"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="15dp">

    </CheckBox>

</RelativeLayout>