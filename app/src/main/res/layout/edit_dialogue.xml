    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginHorizontal="15dp"
        android:id="@+id/dialogSeperater"
        android:background="#CC000000"></View>

    <EditText
        android:id="@+id/dialogueName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogSeperater"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:hint="Drink Name"
        android:maxLength="35"
        android:maxLines="1">

    </EditText>

    <EditText
        android:id="@+id/dialogueDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogueName"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        android:hint="Drink Text"
        android:maxLength="75"
        android:maxLines="3">

    </EditText>

    <TextView
        android:id="@+id/dialogueFavTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogueDesc"
        android:layout_marginHorizontal="15dp"
        android:text="Marked as Favourite :">

    </TextView>

    <CheckBox
        android:id="@+id/dialogueCb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogueDesc"
        android:layout_alignBottom="@id/dialogueFavTxt"
        android:layout_toEndOf="@id/dialogueFavTxt"
        android:layout_marginHorizontal="15dp">

    </CheckBox>

</RelativeLayout>